<section class="content">
  <div class="row">
    <div class="col-lg-3 col-xs-6">
      
      <div class="info-box">
        
        <span class="info-box-icon bg-aqua">
          <span class="fa fa-globe"></span>
        </span>
        
        <div class="info-box-content">
          <span class="info-box-text">Domain Imported</span>
          <span class="info-box-number">
            <%= @domain %>
          </span>
        </div>
        
        
        
      </div>
    </div>  
    <div class="col-lg-3 col-xs-6">
      <div class="info-box">
        
        <span class="info-box-icon bg-yellow">
          <span class="fa fa-filter"></span>
        </span>
        
        <div class="info-box-content">
          <span class="info-box-text">Domain Filtered</span>
          <span class="info-box-number">
            <%= @filtered %>
          </span>
        </div>
        
      </div>
      
    </div>
     <div class="col-lg-3 col-xs-6">
      <div class="info-box">
        
        <span class="info-box-icon bg-red">
          <span class="fa fa-star-o"></span>
        </span>
        
        <div class="info-box-content">
          <span class="info-box-text">Domain With Websites</span>
          <span class="info-box-number">
            <%= @websites %>
          </span>
        </div>
        
      </div>
      
    </div>
  </div>
  
  
  <div class="row">
    
    <div class="col-md-6">
      <div class="box">
      <div class="box-header">
        <h3 class="box-title">Active Jobs</h3>
      </div>
      <div class="box-body">
        
        <table class="table">
          <tbody>
            <tr>
              <th>id</th>
              <th>Job Name</th>
              <th>Job Status</th>
              <th>Progress</th>
            </tr>
            
            <%= @jobs.each do |process_id, thread_id, work|%>
            <% jid= work['payload']['jid'] %>
            <tr>
              <td><%= process_id %></td>
              <td><%= thread_id %></td>
              <td><%= Sidekiq::Status::status jid %></td>
              <td><%= Sidekiq::Status::get_all jid %></td>
            </tr>
            <% end %>
          </tbody>
          
        </table>
      </div>
      </div>
    </div>
  </div>
  
</section>