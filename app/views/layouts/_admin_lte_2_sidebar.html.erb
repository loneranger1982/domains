<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_user.username%></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Domains</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="<%= active_link_to_class(domain_index_path, active: :inclusive)%>"><%= link_to(domain_index_path) do  %><i class='fa fa-globe'></i> <span>Domains</span><% end %></li>
      
      <li class="header">Filters</li>
      <li class="<%= active_link_to_class(filters_path, active: :inclusive)%>"><%= link_to(filters_path) do  %><i class='fa fa-filter'></i> <span>List Filters</span><% end %></li>
      <li class="<%= active_link_to_class(new_filter_path, active: :inclusive)%>"><%= link_to(new_filter_path) do  %><i class='fa fa-link'></i> <span>Create Filter</span><% end %></li>
      
      <li class="header">Scraper</li>
      <li class="<%= active_link_to_class(loadDomain_path, active: :inclusive)%>"><%= link_to(loadDomain_path) do  %><i class='fa fa-file-code-o'></i> <span>Scrape Domain</span><% end %></li>
      <li class="<%= active_link_to_class(parsedomains_path, active: :inclusive)%>"><%= link_to(parsedomains_path) do  %><i class='fa fa-exchange'></i> <span>Parse All Domain</span><% end %></li>
     <li class="<%= active_link_to_class(parsedomains_path, active: :inclusive)%>"><%= link_to(parsedomains_path) do  %><i class='fa fa-exchange'></i> <span>Parse All Domain</span><% end %></li>
     
      <li class="header">Account</li>
      <li class="<%= active_link_to_class(destroy_user_session_path, active: :inclusive)%>"><%= link_to(destroy_user_session_path,method: :delete) do  %><i class='fa fa-sign-out'></i> <span>Sign Out</span><% end %></li>
      <% if current_user.try(:admin?) %>
      <li class="header">Admin</li>
      
      <li class="<%= active_link_to_class(users_path, active: :exclusive)%>"><%= link_to(users_path) do  %><i class='fa fa-users'></i> <span>List User</span><% end %></li>
      <li class="<%= active_link_to_class(new_user_path, active: :exclusive)%>"><%= link_to(new_user_path, :websites true) do  %><i class='fa fa-user-plus'></i> <span>Create User</span><% end %></li>
      <% end %>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
